{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/base",
    "plugin:vue/vue3-recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, {
      "code": 120
    }],
    "consistent-return": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [ "@", "./src" ]
        ]
      }
    }
  }
}
